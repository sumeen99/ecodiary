
{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id"> ID </label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="adminId"> 관리자 </label>
                <input type="text" class="form-control" id="adminId" value="{{post.adminId}}" readonly>
            </div>
            <div class="form-group">
                <label for="num"> 번호 </label>
                <input type="text" class="form-control" id="num" value="{{post.num}}" readonly>
            </div>
            <div class="form-group">
                <label for="mission"> 미션 </label>
                <textarea class="form-control" id="mission">{{post.mission}}</textarea>
            </div>
            <div class="form-group">
                <label for="question"> 질문 </label>
                <textarea class="form-control" id="question">{{post.question}}</textarea>
            </div>
            <div class="form-group">
                <label for="info"> 정보 </label>
                <textarea class="form-control" id="info">{{post.info}}</textarea>
            </div>
            <div class="form-group">
                <label for="imgurl"> 이미지URL </label>
                <textarea class="form-control" id="imgurl">{{post.imgurl}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-postsUpdate">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-postsDelete">삭제</button>
    </div>
</div>

{{>layout/footer}}